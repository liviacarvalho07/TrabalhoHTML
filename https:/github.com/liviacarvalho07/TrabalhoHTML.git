*{
    font-family: sans-serif;
    margin: 0; padding: 0;
    box-sizing: border-box;
    text-decoration: none;
    outline: none; border: none;
    transition: all .2s linear;
}
html{
    font-size: 62.5%;
    overflow-x: hidden;
}
body{
    background: antiquewhite;
    overflow-x: hidden;
    padding-left: 35rem;
}
section{
    min-height: 100vh;
    padding: 1rem;
    margin-left: 5%;
}
.Usuário{
    padding: .7rem 3rem;
    background: orangered;
    color: antiquewhite;
    cursor: pointer;
    margin-top: 1rem;
    font-size: 2rem;
    border-radius: 5rem;
}
header{
    position: fixed;
    top: 0; left: 0;
    z-index: 1000;
    height: 100%;
    width: 35rem;
    background: orangered;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-flow: column;
    text-align: center;
}
header .Usuário img{
    height: 17rem;
    width: 17rem;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
    border: .7rem solid black;
}
header .navbar{
    width: 100%;
}
header .navbar ul{
    list-style: none;
    padding: 1rem 3rem;
}
header .navbar ul li a{
    display: block;
    padding: 1rem;
    margin: 1.5rem 0;
    color: antiquewhite;
    font-size: 2rem;
    border-radius: 5rem;
}
.home{
    display: flex;
    justify-content: center;
    flex-flow: column;
    padding: 0 15rem;
}
.home h3{
    font-size: 4rem;
    color: rgb(255, 115, 0);
}
.home h1{
    font-size: 8rem;
    color: black;
}
.home h1 span{
    font-size: 8rem;
    color: red;
}
.home h2{
    font-size: 8rem;
    color:rgb(1, 1, 104);
}
.home h3{
    font-size: 2rem;
    color: black;
}
.home h3 span{
    font-size: 2rem;
    color: red
}
.home{
    font-size: 2rem;
    color: black;
    padding: 1rem 0;
}
.home p{
    color: rgb(66, 66, 66)
}
